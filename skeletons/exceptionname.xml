<!-- }}} -->

  <section xml:id="exceptionname.synopsis">
   &reftitle.classsynopsis;

   <!-- {{{ Synopsis -->
   <classsynopsis class="class">
    <ooclass>
     <classname>ExceptionName</classname>
    </ooclass>

    <!-- If the class extends another one, use this -->
